@model REST_API.Models.QAnswer

@{
    ViewData["Title"] = "Create";
}

<h1>Create Answer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            @Html.AntiForgeryToken()  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="QuestionId" class="control-label">Question:</label>
                @Html.DropDownListFor(m => m.QuestionId, new SelectList(ViewBag.Question, "Id", "QuestionText"), new { @class = "form-control" })
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Answer" class="control-label">Answer:</label>
                <br />
                @Html.TextAreaFor(m => m.Answer, new { @class = "form-control", rows = "5" })
                @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "error" })
                <br />
            </div>

            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label">Is Correct?</label>
                @Html.CheckBoxFor(m => m.IsCorrect)
                <span asp-validation-for="IsCorrect" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllAnswer">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
}



 
 



 