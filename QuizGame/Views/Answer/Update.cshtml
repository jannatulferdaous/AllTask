@model REST_API.Models.QAnswer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>Answers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div class="form-group">
                <label asp-for="QuestionId" class="control-label"></label>
                <span asp-validation-for="QuestionId" class="text-danger"></span>
                @Html.DropDownListFor(m => m.QuestionId, new SelectList(ViewBag.Question, "QuestionId", "QuestionText"))
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                @Html.LabelFor(m => m.Answer)
                <br />
                @Html.TextAreaFor(m => m.Answer)
                @Html.ValidationMessageFor(m => m.Answer, "", new { @class = "error" })
                <br />
                <span>@Html.Raw(Model.Answer)</span>
                <script src="https://cdn.tiny.cloud/1/ry7f1ohvksa09p4spo7t5wlg1a1v2ctiolzwr6wgerv20zx7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
                <script type="text/javascript">
                    tinymce.init({ selector: 'textarea', width: 300 });
                </script>
            </div>
            <div class="form-group">
                <label asp-for="IsCorrect" class="control-label"></label>
                <span asp-validation-for="IsCorrect" class="text-danger"class="text-xxl-center"></span>
                @Html.CheckBoxFor(m => m.IsCorrect)
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllAnswers">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
