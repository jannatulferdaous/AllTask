@model REST_API.Models.Article

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Tutorial</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Language" class="control-label"></label>
                <input asp-for="Language" class="form-control" />
                <span asp-validation-for="Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                 
                @Html.LabelFor(m => m.ArticleText)

                <br />
                @Html.TextAreaFor(m => m.ArticleText)
                @Html.ValidationMessageFor(m => m.ArticleText, "", new { @class = "error" })
                <br />

                <br />

                <br />
                <span>@Html.Raw(Model.ArticleText)</span>

                <script src="https://cdn.tiny.cloud/1/ry7f1ohvksa09p4spo7t5wlg1a1v2ctiolzwr6wgerv20zx7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
                <script type="text/javascript">
                    tinymce.init({ selector: 'textarea', width: 700 });
                </script>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@{
    if (ViewBag.Message != null)
     {
        <label> @ViewBag.Message</label>
     }
  }

<div>
    <a asp-action="GetAllArticle">Back to List</a>
</div>
@*@Scripts.Render("~/bundles/jquery")*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
}
