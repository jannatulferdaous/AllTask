@model REST_API.Models.Article
@{
    ViewData["Title"] = "Create";
}
<div class="container justify-content-center mt-5 ">
    <div class=" row align-content-center bg-opacity-10 bg-info mt-8 pt-3 mb-3 offset-md-1">
        <h4 class="text-dark  text-center text-lg-center text-uppercase"> Create Article</h4>
    </div>
    <div class=" row align-content-center bg-opacity-10 bg-success p-3 offset-md-3">
        <div class="col-lg-9 justify-content-center box-shadow">
            <form asp-controller="Article" class="align-content-lg-center " asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group form-floating p-3">
                    <label asp-for="Language" class="form-label fw-bolder m-2"></label>
                    <input asp-for="Language" class="form-control" />
                    <span asp-validation-for="Language" class="text-danger"></span>
                </div>
                <div class="form-group form-floating p-3">
                    <label asp-for="Title" class="form-label fw-bolder m-2"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group p-3">
                    <label asp-for="ArticleText" class="form-label fw-bolder"></label>
                    <textarea asp-for ="ArticleText" class="form-control" /> </textarea>
                    <span asp-validation-for="ArticleText" class="text-danger"></span>
                     
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    @{
        if (ViewBag.Message != null)
        {
            <label> @ViewBag.Message</label>
        }
    }
    <div>
        <a asp-action="GetAllArticle" class="btn btn-primary btn-lg " role="button">Back to List</a>
         
    </div>
</div>
  
 
