@model REST_API.Models.Article

@{
    ViewData["Title"] = "UpdateArticle";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Article</title>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center bg-opacity-10 bg-info mt-5 pt-3 mb-3">
            <div class="col-md-8">
                <form asp-controller="Article" class="align-content-lg-center " asp-action="Update">
                    <h3 class="text-dark text-center text-bg-primary p-3">Create Article</h3>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ArticleId" />
                    <div class="form-group form-floating p-3">
                        <label asp-for="Language" class="form-label fw-bolder m-2"></label>
                        <input asp-for="Language" class="form-control" />
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <div class="form-group form-floating p-3">
                        <label asp-for="Title" class="form-label fw-bolder m-2"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group p-3">
                        <label asp-for="ArticleText" class="form-label fw-bolder"></label>
                        <textarea asp-for="ArticleText" class="form-control"> </textarea>
                        <span asp-validation-for="ArticleText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                    </div>
                </form>
            </div>
            <div>
                <a asp-action="GetAllArticle">Back to List</a>
            </div>
        </div>
    </div>
</body>
</html>
