@model REST_API.Models.Article
@{
    ViewData["Title"] = "Tutorial";
}
<div class="container p-3 mt-5">
    <div class="row">
        <div class="col-lg-12 col-sm-4 col-md-8 align-content-md-center align-content-sm-center mb-6">
            <h4 class="text-center text-info pb-3">Wecome to Programming learning</h4>
            <hr />
            <div>
                <h5 class="align-content-lg-center bg-secondary p-3 align-self-lg-center text-light text-uppercase fw-bolder ">@Html.DisplayFor(model => model.Title) </h5>
                <hr />
                @Html.Raw(Model.ArticleText)
            </div>
            <div class="p-3 mb-5 align-content-end">
                <a asp-action="Index" asp-controller="MvcQuestionView" asp-route-id="@Model.ArticleId" class="btn btn-primary btn-lg align-content-lg-end" role="button">Knowledge Check</a>
            </div>
        </div>
    </div>
</div>


