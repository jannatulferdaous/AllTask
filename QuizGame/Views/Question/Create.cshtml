@model REST_API.Models.Question

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>

<h4>Question</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ArticleId " class="control-label">Article</label>
                <span asp-validation-for="ArticleId" class="text-danger"></span>
                @Html.DropDownListFor(m => m.ArticleId, new SelectList(ViewBag.Article, "ArticleId", "Title"))
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.QuestionText)
                <br />
                @Html.TextAreaFor(m => m.QuestionText)
                @Html.ValidationMessageFor(m => m.QuestionText, "", new { @class = "error" })
                <br />
                <span>@Html.Raw(Model.QuestionText)</span>
                <script src="https://cdn.tiny.cloud/1/ry7f1ohvksa09p4spo7t5wlg1a1v2ctiolzwr6wgerv20zx7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
                <script type="text/javascript">
                    tinymce.init({ selector: 'textarea', width: 700 });
                </script>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetAllQuestion">Back to List</a>
</div>
@*@Scripts.Render("~/bundles/jquery")*@
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
}
