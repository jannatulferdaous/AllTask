    <script src="@Url.Content("~/lib/jquery/dist/jquery")"></script>
    <script src="https://cdn.tiny.cloud/1/ry7f1ohvksa09p4spo7t5wlg1a1v2ctiolzwr6wgerv20zx7/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script type="text/javascript">
        tinymce.init({ selector: 'textarea', width: '100%' });
    </script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
         }
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
